.song-item {
  display: flex;
  padding: 16rpx 0;
  align-items: center;
}

.song-item .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 12rpx;
}

.song-item .content {
  flex: 1;
}

.song-item .content .name {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  color: #555;
}

.song-item .content .source {
  font-size: 24rpx;
  color: #999;
}